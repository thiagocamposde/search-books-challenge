    "url": "https://github.com/thiagocamposde/search-books-challenge/issues"
  },
  "homepage": "https://github.com/thiagocamposde/search-books-challenge#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "moment": "^2.24.0",
    "nodemon": "^1.19.2",
    "pg": "^7.14.0",
    "standard": "^14.3.1"
  }
}
